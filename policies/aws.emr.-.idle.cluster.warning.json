{
  "policy": {
    "actions": [
      {
        "category": 2,
        "type": "event"
      }
    ],
    "conditions": [
      {
        "analytic": "actual",
        "level": 1,
        "metric": "aws.elasticmapreduce.isidle",
        "operator": "=="
      }
    ],
    "deleted": false,
    "description": "The EMR cluster has been idle for at least the past hour.",
    "duration": 3600,
    "enabled": false,
    "name": "AWS EMR - Idle Cluster Warning",
    "scope": {
      "elementTypes": [
        "EMR Cluster"
      ]
    }
  }
}